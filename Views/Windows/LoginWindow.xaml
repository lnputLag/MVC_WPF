<Window x:Class="MVC_WPF.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVC_WPF.Views"
        mc:Ignorable="d"
                xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="" Height="350" Width="400" WindowStartupLocation="CenterScreen" 
        Closing="Login_Window_Closing" ResizeMode="NoResize">
    <Grid>
        <StackPanel>
            <TextBlock Text="Авторизация" FontSize="30" FontWeight="Bold" TextAlignment="Center" Padding="15"/>
            <TextBox x:Name="textBoxLogin" Margin="10" materialDesign:HintAssist.Hint="Введите логин" 
                     Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
            <PasswordBox x:Name="passBox" Margin="10" materialDesign:HintAssist.Hint="Введите пароль" 
                         Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"/>
            <Grid>
                <Button HorizontalAlignment="Left" Content="Зарегистрироваться" Margin="10 50 0 0" Click="Button_Reg_Click" />
                <Button HorizontalAlignment="Right" Content="Войти" Margin="0 50 10 0" Click="Button_Window_Auth_Click" />
            </Grid>
        </StackPanel>
    </Grid>
</Window>
