<Window x:Class="MVC_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVC_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Closing="Main_Window_Closing">
    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="911 Support">
                    <MenuItem Header="Отпуск" />
                    <MenuItem Header="Переработки" />
                    <MenuItem Header="Журнал осмотра серверных" />
                </MenuItem>
                <MenuItem Header="TMC">
                    <MenuItem Header="Перемещение техники" />
                    <MenuItem Header="Ремонт" />
                    <MenuItem Header="Ответственные по участкам" />
                    <MenuItem Header="Отчёт" />
                </MenuItem>
                <MenuItem Header="Администрирование">
                    <MenuItem Header="Radmin" Click="Radmin_Item_Click" />
                </MenuItem>
                <MenuItem Header="Серверные">
                    <MenuItem Header="Серверная АБК-1" >
                        <MenuItem Header="test" />
                    </MenuItem>
                    <MenuItem Header="Серверная АБК-2" />
                    <MenuItem Header="Серверная АБК-3" />
                    <MenuItem Header="Серверная РМЦ" />
                    <MenuItem Header="Серверная БДМ-2" />
                    <MenuItem Header="Серверная ЦЛТ" />
                </MenuItem>
                <MenuItem Header="Справка">
                    <MenuItem Header="О программе" />
                </MenuItem>
            </Menu>
            <TabControl x:Name="MainTabControl" />
        </DockPanel>
    </Grid>
</Window>
