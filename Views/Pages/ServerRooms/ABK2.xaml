<Page x:Class="MVC_WPF.Views.Pages.ABK2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MVC_WPF.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ABK2">

    <Grid Margin ="10" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <Button Content="Добавить" Width="100" Margin="0,0,10,0" Click="New_Cartridge_Btn" />
            <Button Content="Изменить" Width="100" Margin="0,0,10,0"/>
            <Button Content="Удалить" Width="100" Cursor="Hand" />
            <TextBlock Text="Фильтр по статусу картриджа:" VerticalAlignment="Center" Margin="10,0,10,0"/>
            <ComboBox Width="150" />
        </StackPanel>


        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>

            <!-- Таблица картриджей -->
            <DataGrid x:Name="ClientsGrid" Grid.Column="0" Margin="5" 
                                  AutoGenerateColumns="False" IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Модель картриджа" Binding="{Binding ModelName}" />
                    <DataGridTextColumn Header="Тип картриджа" Binding="{Binding TypeName}" />
                    <DataGridTextColumn Header="Статус картриджа" Binding="{Binding StatusName}" />
                    <DataGridTextColumn Header="Количество" Binding="{Binding Quantity}" />
                </DataGrid.Columns>
            </DataGrid>

        </Grid>
    </Grid>
</Page>
